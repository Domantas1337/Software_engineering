<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="PSI.MainPage">

    <AbsoluteLayout Margin="20" x:Name="mainLayout">


        <Button
            Text="x"
            WidthRequest      ="60"
            HeightRequest     ="60"
            CornerRadius      ="30"
            VerticalOptions   ="Center"
            HorizontalOptions ="Center"
            BackgroundColor   ="#F77DF9"
            AbsoluteLayout.LayoutBounds="205, 435"
            Clicked="SelectButtonClicked" 
            />
        
        <Button
            Text="Some menu"
            HeightRequest     ="60"
            WidthRequest= "305"
            HorizontalOptions ="Center"
            BackgroundColor   ="#F77DF9"
            AbsoluteLayout.LayoutBounds="-20, 520"
            />

    </AbsoluteLayout>
    
</ContentPage>
