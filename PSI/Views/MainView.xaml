<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="PSI.Views.MainView"
             xmlns:viewmodel="clr-namespace:PSI.ViewModels"
             xmlns:local="clr-namespace:PSI.Models"
             x:DataType="viewmodel:ArticleViewModel"
             Title="Main">

    <ContentPage.ToolbarItems>

        <ToolbarItem Text="Add Item" Clicked="OnAddItemClicked">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, WinUI" Value="plus.png" />
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>

        <ToolbarItem Text="Anouncament" Clicked="OnReportButtonClicked">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, WinUI" Value="bell.png" />
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>

        <ToolbarItem Text="Anouncament" Clicked="StateButtonClicked">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, WinUI" Value="utility.png"/>
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>

        <ToolbarItem Text="Anouncament" Clicked="OnAuthenticationClicked">
            <ToolbarItem.IconImageSource>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android, WinUI" Value="user.png"/>
                </OnPlatform>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <VerticalStackLayout x:Name="ReportLayout">
            <HorizontalStackLayout
                x:Name="Report"
                HorizontalOptions="Center" 
                Spacing="10" >

                <Label  x:Name="ReportTitle"
                        Text="" FontSize="18" 
                        FontAttributes="Bold"
                        TextColor="#50C878" />

                <HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout.GestureRecognizers>

            </HorizontalStackLayout>
        </VerticalStackLayout>
        
        
    </ContentPage.Content>

    <CollectionView
        SelectionMode="None"
        ItemsSource="{Binding Items}">

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="local:ReportItem">
                <SwipeView>
                    <SwipeView.RightItems>

                    </SwipeView.RightItems>
                    <Grid>
                        <Frame
                            HeightRequest="100">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ArticleViewModel}}, Path=DetailsCommand}"
                                    CommandParameter="{Binding Report}"/>
                            </Frame.GestureRecognizers>

                            <HorizontalStackLayout>
                                
                                    <Image 
                                    HeightRequest="100"
                                    Source="{Binding ImageName}" />
                                <Label 
                                       Text="{Binding Title}" 
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       FontSize="36"
                                       FontAttributes="Bold"
                                       Padding="20,0,0,20"
                                    />
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>
                </SwipeView>

            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>