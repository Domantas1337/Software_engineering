<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSI.Views.LocationsView"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             xmlns:viewmodel="clr-namespace:PSI.ViewModels"
             xmlns:local="clr-namespace:PSI.Models"
             x:DataType="viewmodel:LocationsViewModel"
             Title="MapView"
             >

    <maps:Map 
            x:Name="map"
            IsShowingUser="True"
        >
        
        <maps:Map.ItemTemplate>
            <DataTemplate>
                <maps:Pin     Location="{Binding Coords}"
                              Address="{Binding Streets}"
                              Label="{Binding Cities}" />
            </DataTemplate>
        </maps:Map.ItemTemplate>

    </maps:Map>
</ContentPage>