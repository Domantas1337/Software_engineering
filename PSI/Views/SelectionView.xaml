<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSI.Views.SelectionView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            Text="Trash"
            BackgroundColor   ="Yellow"
            Clicked="trashCanClicked"
            />

        <Button
            Grid.Row="1"
            Text="Some Other Trash"
            BackgroundColor   ="Green"
            Clicked="taromatClicked"
            />

        <Button
            Grid.Row="2"
            Text="Even More Trash"
            BackgroundColor   ="Red"
            Clicked = "somethingClicked"
            />
    </Grid>


</ContentPage>