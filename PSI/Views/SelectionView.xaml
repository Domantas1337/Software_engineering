<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSI.Views.SelectionView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Text="Trash can"
                BackgroundColor   ="Yellow"
                Clicked="TrashCanClicked" />

        <Button Grid.Row="1"
                Text="Taromat"
                BackgroundColor   ="Green"
                Clicked="TaromatClicked" />

        <Button Grid.Row="2"
                Text="Litter"
                BackgroundColor   ="Red"
                Clicked = "SomethingClicked" />
    </Grid>

</ContentPage>